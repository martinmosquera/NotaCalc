<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TableRow
            android:id="@+id/tableRow00"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Calculadora de Notas"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/nomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="Nome:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/nomeEditText"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow02"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nota01TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="Nota 01:"
                android:textSize="18sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/nota01EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                app:mask="##"
                app:maskCharacter="#"
                android:minHeight="48dp"
                android:hint="Nota 01"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow03"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nota02TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="Nota 02:"
                android:textSize="18sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/nota02EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                app:mask="##"
                app:maskCharacter="#"
                android:minHeight="48dp"
                android:hint="Nota 02"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow04"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/frequenciaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black"
                android:text="Frequência:"
                android:textSize="18sp" />

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/frequenciaEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                app:mask="###"
                app:maskCharacter="#"
                android:minHeight="48dp"
                android:hint="Frequência"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:onClick="calcular"
                android:backgroundTint="@color/botom"
                android:text="Situação Final" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>